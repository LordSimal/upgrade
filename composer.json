{
    "name": "cakephp/upgrade",
    "type": "rector-extension",
    "description": "Command line tool for updating CakePHP applications and plugins.",
    "homepage": "https://cakephp.org",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "cakephp/console": "5.x-dev",
        "nette/utils": "^3.2",
        "rector/rector": "^0.17.7",
        "symfony/string": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Cake\\Upgrade\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cake\\Upgrade\\Test\\TestCase\\": "tests/TestCase"
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "scripts": {
        "cs-check": "phpcs --colors --parallel=16 -p -s src/ tests/",
        "cs-fix": "phpcbf --colors --parallel=16 -p src/ tests/",
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "rector/extension-installer": true
        }
    },
    "extra": {
        "rector": {
            "includes": [
                "config/rector/config.php"
            ]
        }
    },
    "support": {
        "source": "https://github.com/cakephp/upgrade"
    }
}
